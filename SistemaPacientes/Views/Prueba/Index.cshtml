@using SistemaPacientes.Core.Application.ViewModels.PruebaLaboratorio
@model ICollection<PruebaLaboratorioViewModel>
@{
    ViewData["Title"] = "Mantenimiento Prueba";
}

<div class="container my-2">
    <div class="p-5 text-center bg-body-tertiary rounded-3">
        <img class="bi mt-4 mb-3" src="~/image/Logo.png" width="100" height="100" style="color: var(--bs-indigo); --darkreader-inline-color: var(--darkreader-text--bs-indigo);">
        <h1 class="text-body-emphasis">Mantenimiento de Prueba</h1>
        <p class="col-lg-8 mx-auto fs-5 text-muted">
            Este sistema es fundamental para garantizar una gestión eficiente de los médicos en una organización de atención médica, lo que facilita la asignación de tareas, la programación de citas y la administración de recursos humanos.
        </p>
        <div class="d-inline-flex gap-2 mb-5">
            <a asp-controller="Prueba" asp-action="Create" class="d-inline-flex align-items-center btn btn-primary btn-lg px-4 rounded-pill" type="button">
                Crear Prueba
            </a>
            <button asp-controller="Prueba" asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 rounded-pill" type="button">
                Volver Atras
            </button>
        </div>
    </div>
</div>
@foreach (var item in Model)
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 ">
        <div class="col">
            <div class="card shadow-sm bg-success text-light">
                <div class="card-body">
                    <h5 class="card-title">@item.Nombre</h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a class="btn btn-sm btn-outline-warning" asp-controller="Prueba" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a asp-controller="Prueba" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
